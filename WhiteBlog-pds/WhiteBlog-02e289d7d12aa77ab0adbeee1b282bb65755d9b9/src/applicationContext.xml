			<ref bean="ShowBlogListService" />
		</property>
	</bean>	

	<bean id="BlogManager" class="com.whiteblog.service.BlogManagerImpl">
		<property name="blogDao">
			<ref bean="BlogDAO" />
		</property>
	</bean>
	
	<bean id="SearchArticleAction" class = "com.whiteblog.action.searchArticleAction">
