	<bean id="ShowInformedBlogListService" class="com.whiteblog.service.ShowInformedBlogListService">
		<property name="informDAO">
			<ref bean="InformDAO"/>
		</property>
	</bean>
	
	<bean id="BlogService" class="com.whiteblog.service.BlogServiceImp">
		<property name="blogDAO">
